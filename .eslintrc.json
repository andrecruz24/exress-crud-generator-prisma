{
	"env": {
		"es2021": true,
		"node": true
	},
	"extends": "eslint:recommended",
	"overrides": [],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"rules": {
		"indent": [
			"error",
			"tab"
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"quotes": [
			"error",
			"double"
		],
		"semi": [
			"error",
			"always"
		],
		"comma-dangle": [
			"error",
			"always-multiline"
		],
		"eol-last": [
			"error",
			"always"
		],
		"object-curly-spacing": [
			"error",
			"always",
			{
				"arraysInObjects": true,
				"objectsInObjects": true
			}
		]
	}
}